<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Màu nền của ProgressBar -->
            <corners android:radius="20dp" /> <!-- Điều chỉnh giá trị radius ở đây -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#FF0000" /> <!-- Màu tiến trình của ProgressBar (Màu đỏ) -->
                <corners android:radius="20dp" /> <!-- Điều chỉnh giá trị radius ở đây -->
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="#808080" /> <!-- Màu tiến trình thứ hai của ProgressBar (Màu xám) -->
                <corners android:radius="20dp" /> <!-- Điều chỉnh giá trị radius ở đây -->
            </shape>
        </clip>
    </item>
</layer-list>
